<%- include('header', {pagetitle:'Tárgy adatai'}) -%>
    <div class="container">
      <%  if (typeof targy === "undefined") { %>
        <h1>Új tárgy</h1>
      <% } else {%> 
        <h1><%= targy.nev%> tárgy mósodítása</h1>
      <% } %> 
        <div class="row">
        </div class="col-12">
            <form method="POST">
                <input type="hidden" name="id" <%  if (typeof targy !== "undefined") { %>
                  value=<%=targy._id  %>
                <% } %> 
                />
                <div class="form-group">
                  <label for="nameInput">Név:</label>
                  <input type="text" class="form-control" id="nameInput" name="nev"  placeholder="Tárgy neve..." <%  if (typeof targy !== "undefined") { %>
                    value=<%=targy.nev  %>
                  <% } %> 
                  >
                </div>
                <div class="form-group">
                  <label for="codeInput">Tárgykód:</label>
                  <input type="text" class="form-control" id="codeInput" name="kod" placeholder="Tárgy kódja..."  <%  if (typeof targy !== "undefined") { %>
                    value=<%=targy.kod  %>
                  <% } %> 
                  >
                </div>
                <div class="form-group">
                    <label for="creditInput">Kredit:</label>
                    <input type="number" class="form-control" id="creditInput" name="kredit" placeholder="Tárgy kredit értéke..."  <%  if (typeof targy !== "undefined") { %>
                      value=<%=targy.kredit  %>
                    <% } %> 
                    >
                  </div>
                  <input type="submit" href="/" value="Mentés" class="bt btn-lg btn-primary" />
                  <a href="/" class="bt btn-lg btn-danger">Mégse</a>
              </form>
        </div>

    </div>
   
    <%- include('footer') -%>